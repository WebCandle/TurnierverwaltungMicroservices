@model Common.Trainer

@{
    ViewData["Title"] = "CreateTrainer";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h1>CreateTrainer</h1>

<h4>Trainer</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <div class="text-warning">@ViewData["status"]</div>
        <form asp-action="CreateTrainer">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="Name" class="control-label"></label>
                <input asp-for="Name" class="form-control" />
                <span asp-validation-for="Name" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Nachname" class="control-label"></label>
                <input asp-for="Nachname" class="form-control" />
                <span asp-validation-for="Nachname" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Geburtsdatum" class="control-label"></label>
                <input asp-for="Geburtsdatum" class="form-control" />
                <span asp-validation-for="Geburtsdatum" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Gehalt" class="control-label"></label>
                <input asp-for="Gehalt" class="form-control" />
                <span asp-validation-for="Gehalt" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="MannschaftId" class="control-label"></label>
                <input asp-for="MannschaftId" class="form-control" value="@ViewData["mannschaftId"]" />
                <span asp-validation-for="MannschaftId" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Create" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-action="Index" asp-route-mannschaftId="@ViewData["mannschaftId"]">Back to List</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
